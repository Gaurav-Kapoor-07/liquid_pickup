            <!-- <Sequence name="deploy_sensor"> -->
            <!-- <Pregrasp name="deploy_sensor" action="deploy_sensor" target_x="0.6" target_y="0.01" target_z="0.5" target_roll="0.01" target_pitch ="3.14" target_yaw = "0.01" pregrasp_offset="0.1"/> -->
