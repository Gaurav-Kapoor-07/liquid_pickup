<root BTCPP_format="4" >
    <BehaviorTree ID="MainTree">
        <Sequence name="root_sequence">
            <RobotInitializer name="RobotInitializer" message="RobotInitializer"/>
            <!-- The target coordinates do not matter in the action collect_liquid_sample as they are provided in the TF tree -->
            <!-- <ChangeGripper name="open_gripper" position="0.3" max_effort = "0.0"/> -->
            <!-- <Pregrasp name="pickup_swab_from_palette" action="pickup_swab_from_palette" target_x="-0.1" target_y="0.01" target_z="0.8" target_roll="0.0" target_pitch ="1.57" target_yaw = "0.0" pregrasp_offset="0.1"/>/ -->
            <Pregrasp name="pickup_swab_from_palette" action="pickup_swab_from_palette" target_x="1.0" target_y="0.01" target_z="0.3" target_roll="0.0" target_pitch ="1.57" target_yaw = "0.0" pregrasp_offset="0.1"/>
            <!-- <ChangeGripper name="close_gripper" position="0.6" max_effort = "0.0"/> -->
            <!-- <Pregrasp name="collect_liquid_sample" action="collect_liquid_sample" target_x="0.0" target_y="0.0" target_z="0.0" target_roll="0.0" target_pitch ="0.0" target_yaw = "0.0" pregrasp_offset="0.1"/> -->
            <!-- <Pregrasp name="put_swab_back_in_palette" action="put_swab_back_in_palette" target_x="-0.1" target_y="0.01" target_z="0.8" target_roll="0.0" target_pitch ="1.57" target_yaw = "0.0" pregrasp_offset="0.1"/>  -->
            <!-- <ChangeGripper name="open_gripper" position="0.3" max_effort = "0.0"/> -->
        </Sequence>
    </BehaviorTree>
    <TreeNodesModel>
        <Action ID="ChangeGripper">
            <input_port name="max_effort" type="double"/>
            <input_port name="position" type="double"/>
        </Action>
        <Action ID="Drop"/>
        <Action ID="Grasp">
            <input_port name="target_roll" type="double"/>
            <input_port name="target_pitch" type="double"/>
            <input_port name="target_z" type="double"/>
            <input_port name="target_y" type="double"/>
            <input_port name="target_x" type="double"/>
            <input_port name="target_yaw" type="double"/>
            <input_port name="action" type="std::string"/>
        </Action>
        <Action ID="Pregrasp">
            <input_port name="target_roll" type="double"/>
            <input_port name="target_pitch" type="double"/>
            <input_port name="pregrasp_offset" type="double"/>
            <input_port name="target_z" type="double"/>
            <input_port name="target_y" type="double"/>
            <input_port name="target_x" type="double"/>
            <input_port name="target_yaw" type="double"/>
            <input_port name="action" type="std::string"/>
        </Action>
        <Action ID="RetreatZ"/>
        <Action ID="RobotInitializer">
            <input_port name="message" type="std::string"/>
        </Action>
        <Action ID="ScanPose"/>
    </TreeNodesModel>
</root>